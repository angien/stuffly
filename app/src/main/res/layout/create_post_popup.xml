<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="325dp"
    android:layout_height="match_parent" android:layout_gravity="center_horizontal"
    android:weightSum="1"
    android:id="@+id/create_post_popup"
    android:background="@drawable/button_color"
    android:padding="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ems="10"
        android:id="@+id/stuffTitle"
        android:hint="Title"
        android:inputType="text" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/stuffDescription"
        android:hint="Description"
        android:minHeight="120dp"
        android:gravity="bottom" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="$"
            android:id="@+id/dollarSign"
            android:textSize="24dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/stuffPrice"
            android:layout_weight="1"
            android:text="0.00"
            android:gravity="right"
            android:textSize="24dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBO"
            android:id="@+id/checkOBO"
            android:checked="false"
            android:textSize="24dp" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="No Image Preview"
        android:id="@+id/stuffPic"
        android:minHeight="60dp"
        android:gravity="center_vertical|center_horizontal" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/stuffPicButton"
        android:layout_gravity="center_horizontal"
        android:src="@android:drawable/ic_menu_camera"
        android:background="@drawable/button_color" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stuff It"
        android:id="@+id/stuffItButton"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:background="@drawable/button_color"
        android:textSize="18dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/stuffCancelButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_color"
        android:textSize="16dp"/>/>
</LinearLayout>