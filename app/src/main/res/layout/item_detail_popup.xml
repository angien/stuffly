<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp" android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/item_detail_cancel_button"
            android:src="@drawable/ic_action_back"
            android:background="@drawable/stuffly_color" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:id="@+id/item_detail_top_bar"
            android:background="@drawable/stuffly_color"/>

        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:id="@+id/item_detail_bookmark_button"
            android:src="@drawable/ic_action_star"
            android:background="@drawable/stuffly_color" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/item_detail_linear_layout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:id="@+id/item_detail_title"
            android:textSize="45dp"
            android:gravity="bottom"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="23dp"
            android:text="Posted by "
            android:id="@+id/item_detail_posted_by"
            android:textSize="18dp"
            android:gravity="bottom"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/item_detail_pic"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/item_detail_description"
            android:textSize="16dp"
            android:maxHeight="120dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="50dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="$0.00"
                android:id="@+id/item_detail_price"
                android:textSize="30dp"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dp"/>

            <CheckBox
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="OBO"
                android:id="@+id/item_detail_obo"
                android:checked="false"
                android:textSize="24dp"
                android:enabled="true"
                android:clickable="false"
                android:layout_marginLeft="50dp" />

        </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:text="Off-Campus"
                    android:id="@+id/item_detail_location"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/button"/>

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="40dp"
                    android:text="Acceptable"
                    android:id="@+id/item_detail_condition"
                    android:textSize="24dp"
                    android:gravity="center"
                    android:padding="1dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/button"/>
            </LinearLayout>

            <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/item_detail_message_text"
            android:layout_gravity="center_horizontal"
            android:hint="Write your message"
            android:editable="true"
            android:focusable="true"
            android:enabled="true"
            android:gravity="bottom"
            android:minHeight="100dp"/>

            <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:id="@+id/item_detail_message_button"
            android:background="@drawable/stuffly_color"
            android:src="@drawable/ic_action_chat"
            android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>