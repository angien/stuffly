<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/messages_cell_pic" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:text="Name"
                android:id="@+id/messages_cell_title"
                android:textSize="16dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:text="Date"
                android:id="@+id/messages_cell_date"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Message\nMessage\nMessage\nMessage\nMessage\nMessage\n"
            android:id="@+id/messages_cell_description"
            android:textSize="16dp"
            android:fadingEdge="vertical"
            android:fadingEdgeLength="25dp"/>

    </LinearLayout>

</LinearLayout>