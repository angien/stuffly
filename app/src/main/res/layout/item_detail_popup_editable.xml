<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="325dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:padding="10dp"
    android:id="@+id/item_detail_linear_layout_editable">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Title"
        android:id="@+id/item_detail_title_editable"
        android:textSize="35dp"
        android:gravity="bottom"/>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/item_detail_pic_editable" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/item_detail_description_editable"
        android:textSize="16dp"
        android:maxHeight="120dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <EditText
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="$0.00"
            android:id="@+id/item_detail_price_editable"
            android:textSize="20dp"
            android:gravity="center_vertical|right" />

        <CheckBox
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:text="OBO"
            android:id="@+id/item_detail_obo_editable"
            android:checked="false"
            android:textSize="24dp"
            android:enabled="true"
            android:clickable="true"
            android:layout_marginLeft="50dp"
            android:gravity="center_vertical" />

    </LinearLayout>

    <Spinner
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:id="@+id/item_detail_location_editable"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:spinnerMode="dropdown"
        android:focusable="false"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Share"
        android:id="@+id/item_detail_editable_facebook_button"
        android:background="@drawable/facebook_color"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Save"
            android:id="@+id/item_detail_editable_save_button"
            android:background="@drawable/button_color"
            android:layout_marginRight="5dp" />

        <Button
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Delete"
            android:id="@+id/item_detail_editable_delete_button"
            android:background="@drawable/button_color"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>